model business {
    id                   Int                      @id() @default(autoincrement())
    created_at           DateTime                 @default(now())
    updated_at           DateTime                 @default(now()) @updatedAt
    manager_id           Int?
    name                 String                   @unique
    slug                 String                   @unique
    business_category_id Int
    is_active            Boolean                  @default(true)
    business_category    business_category        @relation(fields: [business_category_id], references: [id])
    options              business_options[]
    extra_options        business_extra_options[]
    employees            employee[]
    manager              manager?                 @relation(fields: [manager_id], references: [employee_id])
    branches             branch[]

    @@schema("common")
}

model business_options {
    id          Int      @id() @default(autoincrement())
    created_at  DateTime @default(now())
    updated_at  DateTime @default(now()) @updatedAt
    title       String
    value       String
    business_id Int
    business    business @relation(fields: [business_id], references: [id])

    @@schema("common")
}

model business_extra_options {
    id          Int      @id() @default(autoincrement())
    created_at  DateTime @default(now())
    updated_at  DateTime @default(now()) @updatedAt
    title       String
    value       String
    business_id Int
    business    business @relation(fields: [business_id], references: [id])

    @@schema("common")
}
